# GIT HELPERS
	
	alias gd='git diff'
	alias gca='git commit -a'
	alias gco='git checkout'
	alias gb='git branch'
	alias gs='git status -sb' # upgrade your git if -sb breaks for you. it's fun.
	alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
	
	alias glog="git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
	
# GIT COMMIT AND COMMIT/PUSH HELPER	

	function c() {
		git add -A
		git commit -m "$*"
	}
	
	function p() {
		git add -A
		git commit -m '$*'
		git push
	}

	function ga() {
		git add $*
	}
	
	function gc() {
		git commit -m "$*"	
	}

	alias gp='git push origin HEAD'
	
	function gcp() {
		git commit -m "$*"	
		git push origin HEAD
	}
	
# EXPORT GIT TO TEMP FOLDER
	
	function gx() {
	   GXFOLDER=temp
       if [ $1 ]; then
            GXFOLDER=$1
        fi	
		rm -rf $GXFOLDER
		mkdir $GXFOLDER
		git archive --format=tar master | (cd $GXFOLDER/ && tar -xf -)
	}

# EXPORT GIT AND UPLOAD TO FTP FOLDER
# pass in ssh server + folder path
	
	function gxp() {
		if [ $# -gt 0  ]; then
			GXPFOLDER=temp
			gx
			rsync -e ssh -av $GXPFOLDER/ $1:$2 --delete
			rm -rf $GXPFOLDER
		else
			echo "ERROR: Missing SSH server or folder path!"
			echo "Ex: gxp yourserver.com somefolder/subfolder"
		fi
	}		
	
