# GIT HELPERS

	# QUICK CHECKOUT
	alias gco='git checkout'
	
	# QUICK ADD
	function ga() {
		git add $*
	}

	# ADD ALL CHANGED AND NEW FILES
	function gaa() {
		git add -A
	}
	
	# QUICK COMMIT
	function gc() {
		git commit -m "$*"	
	}
	
	# ADD TRACKED CHANGES, THEN COMMIT
	function gac() {
		git commit -am "$*"
	}
	
	# ADD TRACKED CHANGES, COMMIT, THEN PUSH
	function gacp() {
		git commit -am "$*"	
		git push
	}
	
	# ADD ALL CHANGES, THEN COMMIT	
	function c() {
		git add -A
		git commit -m "$*"
	}	

	#  ADD ALL CHANGES, COMMIT, THEN PUSH	
	function p() {
		git add -A
		git commit -m '$*'
		git push
	}
		
	alias gp='git push'
	
	alias gd='git diff'		
	alias gb='git branch'
	alias gs='git status -sb' # upgrade your git if -sb breaks for you. it's fun.
	alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
	alias gm="git merge"
	alias gmv='git mv $*'
	
	function gi() {
		git init
		git add *
		git commit -m "initial commit"
	}
	
	alias glog="git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
	
# GIT FLOW HELPERS

	alias gfs='git flow feature start $1'
	alias gff='git flow feature finish $1'
		
# EXPORT GIT TO TEMP FOLDER
	
	function gx() {
	   GXFOLDER=temp
       if [ $1 ]; then
            GXFOLDER=$1
        fi	
		rm -rf $GXFOLDER
		mkdir $GXFOLDER
		git archive --format=tar master | (cd $GXFOLDER/ && tar -xf -)
	}

# EXPORT GIT AND UPLOAD TO FTP FOLDER
# pass in ssh server + folder path
	
	function gxp() {
		if [ $# -gt 0  ]; then
			GXPFOLDER=temp
			gx
			rsync -e ssh -av $GXPFOLDER/ $1:$2 --delete
			rm -rf $GXPFOLDER
		else
			echo "ERROR: Missing SSH server or folder path!"
			echo "Ex: gxp yourserver.com somefolder/subfolder"
		fi
	}		
	
